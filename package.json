{
  "name": "tjh-ui",
  "private": false,
  "version": "0.0.3",
  "description": "a vue3 component storage.",
  "main": "./lib/index.umd.js",
  "module": "./lib/index.es.js",
  "author": {
    "email": "tjhaaa@163.com",
    "name": "tangjiahui",
    "url": ""
  },
  "license": "ISC",
  "scripts": {
    "dev": "vite",
    "build": "rimraf lib && rollup -c build/rollup.lib.js",
    "Publish": "yarn build && sh script/updateVersion.sh && npm publish --registry=http://localhost:4873",
    "unPublish": "npm unpublish tjh-ui --force --registry=http://localhost:4873",
    "PublishNpm": "yarn build && sh script/updateVersion.sh && npm publish --registry=https://registry.npmjs.org",
    "unPublishNpm": "npm unpublish tjh-ui --force --registry=https://registry.npmjs.org",
    "reset": "sh script/updateVersion.sh 0.0.0 && yarn unPublish",
    "eslint:fix": "eslint --fix --ext .js,.vue ./packages ./build ./*.*.js ./*.js ./.*.js src",
    "stylelint:check": "stylelint packages/**/*.{vue,css,sass,scss}",
    "prettier:fix": "prettier --write .",
    "lint-staged": "lint-staged",
    "husky:create-command": "husky add .husky/pre-commit 'your command'"
  },
  "dependencies": {
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@vitejs/plugin-vue": "^2.0.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^7.1.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.1",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-vue": "^6.0.0",
    "sass": "^1.49.0",
    "scss-loader": "^0.0.1",
    "stylelint": "^14.3.0",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-scss": "^4.1.0",
    "vite": "^2.7.2"
  },
  "lint-staged": {
    "{build,packages,src}/*.{js, vue, css, scss}": [
      "eslint --fix",
      "stylelint",
      "prettier --write",
      "git add"
    ]
  }
}
